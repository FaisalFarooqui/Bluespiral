
@{
    ViewBag.Title = "OrderList";
    Layout = "~/Views/Shared/_CustomerLayout.cshtml";
}
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.1.0/jquery.min.js"></script>
<div class="col-lg-9 col-md-8 col-sm-8 pt-4 pr-4 pl-4 pb-5">
    <div id="order" class="tabcontent" style="display: block;">
        <div class="padding-top-2x mt-2 hidden-lg-up"></div>
        <h4>Order</h4>
        <div class="padding-top-2x mt-2 hidden-lg-up"></div>
        <div class="table-responsive">
            <table class="table table-hover margin-bottom-none">
                <thead>
                    <tr>
                        <th>Order No.</th>
                        <th>Date Purchased</th>
                        <th>Status</th>
                        <th>Total</th>
                    </tr>
                </thead>
                <tbody>
                    @if (ViewBag.OrderList != null)
                    {
                        foreach (var item in ViewBag.OrderList)
                        {
                    <tr>
                        <td><a class="text-medium navi-link" href="#" data-toggle="modal" data-target="#orderDetails">@item.OrdeNo</a></td>
                       
                        <td>@item.DateOfPurchase</td>
                        <td><span class="text-danger">@item.OrderStatus</span></td>
                        <td><span class="text-medium">Rs-@item.TotalAmount</span></td>
                    </tr>
                        }
                    }
